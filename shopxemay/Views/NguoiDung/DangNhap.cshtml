@model shopxemay.Models.KhachHang

@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}


<link rel="stylesheet" type="text/css" href="~/Content/login.css">
@using (Html.BeginForm("DangNhap", "NguoiDung", FormMethod.Post))
{
    <div class="login-box">
        <h2>ĐĂNG NHẬP</h2>
        <form>
            <div class="user-box">
                @Html.TextBoxFor(model => model.tendangnhap, new { @class = "form-control", @autofocus = "autoforcus" })
                <label>Tên đăng nhập</label>
            </div>
            <div class="user-box">
                <input type="password"@Html.TextBoxFor(model => model.matkhau, new { @class = "form-control", @autofocus = "autoforcus" })
                <label>Mật khẩu</label>
            </div>
            <a href="#">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                @ViewBag.ThongBao
                <button class="btn btn-lg btn-primary btn btn-success" type="submit">ĐĂNG NHẬP</button>
            </a>
        </form>
    </div>
}
