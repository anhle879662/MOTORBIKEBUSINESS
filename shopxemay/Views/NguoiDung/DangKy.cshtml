@model shopxemay.Models.KhachHang

@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/assets/css/base.css" rel="stylesheet" />
<link href="~/Content/assets/css/styles.css" rel="stylesheet" />
<link href="~/Content/assets/css/main.css" rel="stylesheet" />
<link href="~/Content/assets/css/main.min.css" rel="stylesheet" />


<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title>Au Register Forms by Colorlib</title>

    <!-- Icons font CSS-->
    <link href="vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">

    <!-- Vendor CSS-->
    <link href="vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="css/main.css" rel="stylesheet" media="all">
</head>

<body>
    @using (Html.BeginForm("DangKy", "NguoiDung", FormMethod.Post))
    {<div class="page-wrapper bg-gra-03 p-t-45 p-b-50">
    <div class="wrapper wrapper--w790">
        <div class="card card-5">
            <div class="card-heading">
                <h2 class="title">ĐĂNG KÍ TÀI KHOẢN</h2>
            </div>
            <div class="card-body">
                <form method="POST">
                    <div class="form-row m-b-55">
                        <div class="name">Họ Tên</div>
                        <div class="value">
                            <div class="row row-space">
                                <div class="col-2">
                                    <div class="input-group-desc">
                                        <input class="input--style-5" type="text" name="hoten" @Html.TextBoxFor(model => model.hoten, new { @class = "form-control", @autofocus = "autoforcus" })

                                    </div>
                                </div>

                            </div>
                        </div>
                        @ViewData["Loi6"]
                    </div>
                    <div class="form-row">
                        <div class="name">Ngày sinh</div>
                        <div class="value">
                            <div class="input-group">
                                <input class="input--style-5" name="ngaysinh" type="datetime" @Html.TextBoxFor(model => model.ngaysinh, new { @class = "form-control", @autofocus = "autoforcus" })
                            </div>
                        </div>
                        @ViewData["Loi8"]
                    </div>
                    <div class="form-row">
                        <div class="name">Địa chỉ</div>
                        <div class="value">
                            <div class="input-group">
                                <input class="input--style-5" type="text" name="diachi" @Html.TextBoxFor(model => model.ngaysinh, new { @class = "form-control", @autofocus = "autoforcus" })
                            </div>
                        </div>
                        @ViewData["Loi4"]
                    </div>
                    <div class="form-row m-b-55">
                        <div class="name">Điện thoại</div>
                        <div class="value">
                            <div class="row row-refine">
                                <div class="col-9">
                                    <div class="input-group-desc">
                                        <input class="input--style-5" type="text" name="dienthoai" @Html.TextBoxFor(model => model.dienthoai, new { @class = "form-control", @autofocus = "autoforcus" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        @ViewData["Loi5"]
                    </div>
                    <div class="form-row m-b-55">
                        <div class="name">Email</div>
                        <div class="value">
                            <div class="row row-refine">
                                <div class="col-9">
                                    <div class="input-group-desc">
                                        <input class="input--style-5" type="text" name="email" @Html.TextBoxFor(model => model.email, new { @class = "form-control", @autofocus = "autoforcus" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        @ViewData["Loi3"]
                    </div>
                    <div class="form-row">
                        <div class="name">Tên đăng nhập</div>
                        <div class="value">
                            <div class="input-group">
                                <input class="input--style-5" type="text" name="tendangnhap" @Html.TextBoxFor(model => model.tendangnhap, new { @class = "form-control", @autofocus = "autoforcus" })
                            </div>
                        </div>
                        @ViewData["Loi1"]
                    </div>
                    <div class="form-row">
                        <div class="name">Mật khẩu</div>
                        <div class="value">
                            <div class="input-group">
                                <input class="input--style-5" type="password" name="matkhau" @Html.TextBoxFor(model => model.matkhau, new { @class = "form-control", @autofocus = "autoforcus" })
                            </div>
                        </div>
                        @ViewData["Loi2"]
                    </div>
                    <div class="form-row">
                        <label class="control-label col-md-2" for="MatKhauXacNhan">
                            Mật khẩu xác nhận:
                        </label>
                        <div class="col-md-10">
                            <input class="input--style-5"
                                   data-val="true" data-val-required="Phải nhập mật khẩu xác nhận!"
                                   id="MatKhauXacNhan" name="MatKhauXacNhan" type="password" value="" aria-
                                   describedby="MatKhauXacNhan-error" aria-invalid="true">
                            @ViewData["NhapMKXN"]
                            @ViewData["MatKhauGiongNhau"]
                        </div>
                        @ViewBag.ThongBao
                    </div>
                    <div>
                        <button class="btn btn--radius-2 btn--red" type="submit">Đăng kí</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

    <!-- Jquery JS-->
    <script src="vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="vendor/select2/select2.min.js"></script>
    <script src="vendor/datepicker/moment.min.js"></script>
    <script src="vendor/datepicker/daterangepicker.js"></script>

    <!-- Main JS-->
    <script src="js/global.js"></script>
 }

